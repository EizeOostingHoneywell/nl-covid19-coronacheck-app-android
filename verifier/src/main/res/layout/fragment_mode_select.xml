<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <nl.rijksoverheid.ctr.design.views.Toolbar
        android:id="@+id/toolbar"
        app:title="@string/risk_mode_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back"
        app:navigationIcon="@drawable/ic_back" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/risk_mode_selection_title"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="18dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        style="@style/App.TextAppearance.MaterialComponents.Headline5.Montserrat" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="18dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        style="@style/App.TextAppearance.MaterialComponents.Body2.Secondary"
        android:text="@string/risk_mode_selection_subtitle" />

    <RadioGroup
        android:id="@+id/modeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/subHeader"
        app:layout_constraintTop_toBottomOf="@+id/subHeader">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="20dp"
            android:background="#3C3C434A" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/lowRisk"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="8dp"
            android:layout_height="20dp"
            style="@style/App.TextAppearance.MaterialComponents.Body1"
            android:textStyle="bold"
            android:text="@string/risk_mode_selection_low_risk_title" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="56dp"
            style="@style/App.TextAppearance.MaterialComponents.Body2.Secondary"
            android:text="@string/risk_mode_selection_low_risk_subtitle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="20dp"
            android:background="#3C3C434A" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/highRisk"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="8dp"
            style="@style/App.TextAppearance.MaterialComponents.Body1"
            android:textStyle="bold"
            android:text="@string/risk_mode_selection_high_risk_title" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            style="@style/App.TextAppearance.MaterialComponents.Body2.Secondary"
            android:paddingHorizontal="56dp"
            android:text="@string/risk_mode_selection_high_risk_subtitle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="#3C3C434A" />

    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:textSize="12sp"
        android:textColor="@color/link"
        android:text="@string/risk_mode_selection_explanation_button"
        style="@style/Widget.App.Button.Toggle"
        app:layout_constraintTop_toBottomOf="@id/modeRadioGroup"
        app:layout_constraintStart_toStartOf="@id/modeRadioGroup" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startScanningButton"
        style="@style/Widget.App.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/scan_qr_button"
        android:visibility="gone"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>